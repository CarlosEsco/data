  "altTitles": [
   {
    "es-la": "Ríete de la tormenta nocturna"
   },
   {
    "ja": "夜嵐にわらう"
   },
   {
    "en": "Laugh at the night storm"
   },
   {
    "ru": "Смех в ночной буре"
   }
